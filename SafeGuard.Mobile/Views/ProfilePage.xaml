<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeGuard.Mobile.ProfilePage"
             Title="Profilim" BackgroundColor="#F5F5F5">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Border Stroke="#2196F3" StrokeThickness="3" HeightRequest="120" WidthRequest="120" StrokeShape="RoundRectangle 60">
                    <Grid>
                        <Image x:Name="ProfileImage" Aspect="AspectFill"/>
                        <Label x:Name="InitialsLabel" Text="AD" FontSize="40" FontAttributes="Bold" TextColor="#2196F3" 
                               HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Grid>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnChangePhotoClicked"/>
                    </Border.GestureRecognizers>
                </Border>
                <Label Text="Fotoğrafı Değiştir" TextColor="#2196F3" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Entry x:Name="NameEntry" Placeholder="Ad Soyad" BackgroundColor="White" TextColor="Black"/>
            <Entry x:Name="PhoneEntry" Placeholder="Telefon" Keyboard="Telephone" BackgroundColor="White" TextColor="Black"/>
            <Entry x:Name="BloodEntry" Placeholder="Kan Grubu (Örn: A Rh+)" BackgroundColor="White" TextColor="Red" FontAttributes="Bold"/>

            <Button Text="KAYDET" BackgroundColor="#2196F3" Clicked="OnSaveClicked" CornerRadius="20"/>
            <Button Text="ÇIKIŞ YAP" BackgroundColor="Transparent" TextColor="Red" Clicked="OnLogoutClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>