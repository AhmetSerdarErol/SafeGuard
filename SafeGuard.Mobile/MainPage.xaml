<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeGuard.Mobile.MainPage"
             BackgroundColor="#121212" 
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30,50,30,0"
            VerticalOptions="Center">

            <Border StrokeShape="RoundRectangle 90"
        StrokeThickness="0"
        HeightRequest="180"
        WidthRequest="180"
        HorizontalOptions="Center"
        Margin="0,0,0,30">

                <Image Source="app_logo.jpg"
           Aspect="AspectFill"
           HeightRequest="180"
           WidthRequest="180"
           HorizontalOptions="Center"
           VerticalOptions="Center"/>
            </Border>

            <Label
                Text="SafeGuard"
                TextColor="White"
                FontSize="36"
                FontAttributes="Bold"
                HorizontalOptions="Center" 
                CharacterSpacing="1"/>

            <Label
                Text="Güvende kalmanın en hızlı yolu"
                TextColor="#A0A0A0"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,-10,0,40"/>

            <Border StrokeThickness="0" BackgroundColor="#1E1E1E" StrokeShape="RoundRectangle 10" Padding="15,5">
                <Entry x:Name="EmailEntry"
                       Placeholder="E-posta Adresi"
                       PlaceholderColor="#808080"
                       TextColor="White"
                       Keyboard="Email"
                       HeightRequest="50"/>
            </Border>

            <Border StrokeThickness="0" BackgroundColor="#1E1E1E" StrokeShape="RoundRectangle 10" Padding="15,5">
                <Entry x:Name="PasswordEntry"
                       Placeholder="Şifre"
                       PlaceholderColor="#808080"
                       TextColor="White"
                       IsPassword="True"
                       HeightRequest="50"/>
            </Border>

            <Label Text="Şifremi Unuttum" 
                   TextColor="#512BD4" 
                   FontSize="14" 
                   HorizontalOptions="End"
                   Margin="0,0,5,20"/>

            <Button
                x:Name="LoginBtn"
                Text="GİRİŞ YAP"
                BackgroundColor="#512BD4"
                TextColor="White"
                HeightRequest="55"
                CornerRadius="12"
                FontAttributes="Bold"
                FontSize="16"
                Clicked="OnLoginClicked"/>

            <Label Text="Hesabın yok mu? Kayıt Ol"
                TextColor="White"
                HorizontalOptions="Center"
                Margin="0,20,0,0"
                TextDecorations="Underline">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRegisterTapped"/>
                </Label.GestureRecognizers>
            </Label>

            <ActivityIndicator x:Name="LoadingSpinner" IsRunning="False" Color="#512BD4" Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>